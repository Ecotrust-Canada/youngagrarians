.detail-page.standalone

  = render partial: 'header'

  %h1<=@location.name
  %i
    = content_tag( 'span', @location.resource_type, class: 'resource-type' ) if @location.resource_type
    - if @location.bioregion.present? and @location.bioregion != "Any"
      Located in #{@location.bioregion}
  
  #{top_category_list( @location )}

 
  - if current_user && @location.admin?( current_user )
    %div.clearfix
      %p.pull-right
        = link_to 'Edit Location', edit_location_path( @location ), class: 'button button-primary'
  
  - if @location.description.present? || @location.content.present?
    = content_tag( 'div', @location.description, class: 'location-description' ) if @location.description.present?
    = content_tag( 'div', @location.content, class: 'location-content' ) if @location.content.present?
  
  %h2<Land Seeker Details

  .extensions
    .row
      .four.columns Training
      .eight.columns #{ lf_simple( @location, 'training' )}
    .row
      .four.columns Do you have a business plan? 
      .eight.columns #{ lf_bool_with_comment( @location, 'business_plan' )}
    .row
      .four.columns Do you have financial resources available to start your farm? 
      .eight.columns #{ lf_bool_with_comment( @location, 'financial_resources' )}
    .row
      .four.columns Do you have access to other financial resources (such as a financial partner, loan, etc.) to start your farm?'
      .eight.columns #{ lf_bool_with_comment( @location, 'other_financial_resources' )}

  %h3<Project
  .extensions
    .row
      .four.columns Farm Name
      .eight.columns #{ lf_simple( @location, 'farm_name' ) }
    .row
      .four.columns Preferred Arrangement
      .eight.columns #{ lf_simple( @location, 'preferred_arrangement' )}
    .row
      .four.columns Duration of the desired agreement
      .eight.columns #{ lf_simple( @location, 'agreement_duration' ) }
    .row
      .four.columns deal date to obtain land by
      .eight.columns #{ lf_simple( @location, 'desired_start_date' ) }

  %h3<Land & Features Desired
  .extensions
    .row
      .four.columns Total Land Size (acres)
      .eight.columns #{ lf_simple( @location, 'desired_total_size' ) }
    .row
      .four.columns Wooded Area (acres)
      .eight.columns #{ lf_bool_with_comment( @location, 'wooded_area' )}
    .row
      .four.columns Cultivable Area (acres)
      .eight.columns #{ lf_simple( @location, 'desired_cultivable_area' ) }
    .row
      .four.columns Possibility to expand area currently available (acres)
      .eight.columns #{ lf_bool_with_comment( @location, 'expansion_size' )}
    .row
      .four.columns Zoning
      .eight.columns #{ lf_simple( @location, 'zoning' )}

    .row
      .four.columns Preferred current state of the surface of the cultivable area
      .eight.columns
        %p
          = @location.desired_surface_state

    .row
      .four.columns Open to landowner residing on property 
      .eight.columns #{ lf_bool_with_comment( @location, 'owner_resides' )}
    .row
      .four.columns Need farm buildings 
      .eight.columns #{ lf_bool_with_comment( @location, 'buildings_required' )}
    .row
      .four.columns Need fenced land 
      .eight.columns #{ lf_bool_with_comment( @location, 'fencing_required' )}
    .row
      .four.columns Need farm machinery and tools 
      .eight.columns #{ lf_bool_with_comment( @location, 'tools_required' )}
    .row
      .four.columns Need established water source and infrastructure 
      .eight.columns #{ lf_bool_with_comment( @location, 'need_water' )}
    .row
      .four.columns Need on-site housing 
      .eight.columns #{ lf_bool_with_comment( @location, 'need_housing' )}
    .row
      .four.columns Production type
      .eight.columns #{ lf_multiselect( @location, 'desired_use' )}
    .row
      .four.columns Type of agriculture
      .eight.columns #{ lf_multiselect( @location, 'desired_practices' )}
    .row
      .four.columns Soil needs
      .eight.columns #{ lf_simple( @location, 'soil_needs' )}

    .row
      .four.columns Will acquire commercial insurance
      .eight.columns #{ lf_bool_with_comment( @location, 'insurance' )}


  .row-wrap
    .row
      .six.columns
        
        = render partial: 'message'

        %h3<Address
        %p
          = display_address( @location )

      .six.columns
        = render partial: 'comments'

        - if @location.latitude && @location.longitude
          #minimap
  .social-wrap
    = render partial: 'social' 

  .last-modified.text-muted
    Last modifed #{@location.updated_at ? distance_of_time_in_words( @location.updated_at, Time.current ) : 'unknown'} ago;
    #{@location.show_until ? @location.show_until : 'never expires'}.

= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js'
:javascript
  $('.comment a.remove' ).click( function( e ) 
  {
    e.preventDefault();
    if( confirm( "Are you sure you want to remove that comment?" ) )
    {
      var c = $( e.target ).closest( '.comment' );
      c.hide();
      $.post( e.currentTarget.href, { '_method': 'delete' }, function(){ c.remove() } ).error( function(){ c.show(); } );
    }

  } );
