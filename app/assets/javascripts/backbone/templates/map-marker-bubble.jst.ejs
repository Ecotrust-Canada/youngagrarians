<div class='map-marker' id="map-popup-<%= id %>">
	<% if ( _(url).isEmpty() ){ %>
	<h3><%= name %></h3>
	<% } else { %>
	<h3><a href="<%= url %>" target="_blank"><%= name %></a></h3>
	<% } %>
	<p><%= description %></p>

	<div class="contact-info">
		<ul class="unstyled info">
			<% if ( !_(address).isEmpty() ){ %>
			<li class="address"><%= address %></li>
			<% } %>

			<% if ( !_(phone).isEmpty() ){ %>
			<li class="phone"><%= phone %></li>
			<% } %>

			<% if ( !_(twitter_url).isEmpty() ){ %>
			<li class="twitter"><a href="<%= twitter_url %>" target="_BLANK">Twitter</a></li>
			<% } %>

			<% if ( !_(fb_url).isEmpty() ){ %>
			<li class="facebook"><a href="<%= fb_url %>" target="_blank">Facebook</a></li>
			<% } %>
		</ul>
	</div>

	<div class="share">
		<p>Share this location with your friends!</p>
		<ul class="unstyled inline social">
			<li class="twitter"></li>
			<li class="facebook">
				<a href="http://www.facebook.com/sharer/sharer.php?s=100&p[url]=<% link %>&p[images]=[0]&p[title]=Young Agrarians Map Location&p[summary]=<%= description %>" target="_blank">Share On Facebook</a>
			</li>
		</ul>
	</div>
</div>
