<div class='map-marker'>
	<% if ( !_(url).isEmpty() ){ %>
	<h3><%= name %></h3>
	<% } else { %>
	<h3><a href="<%= url %>" target="_blank"><%= name %></a></h3>
	<% } %>
	<p><%= description %></p>

	<ul class="unstyled info">
		<% if ( !_(address).isEmpty() ){ %>
		<li class="address"><%= address %></li>
		<% } %>

		<% if ( !_(phone).isEmpty() ){ %>
		<li class="phone"><%= phone %></li>
		<% } %>
	</ul>

	<ul class="unstyled inline social">
		<li class="location"><a href="<%= link %>">Link To This Location</a></li>
		<% if ( !_(twitter_url).isEmpty() ){ %>
		<li class="twitter"><a href="<%= twitter_url %>" target="_BLANK">Twitter</a></li>
		<% } %>

		<% if ( !_(fb_url).isEmpty() ){ %>
		<li class="facebook"><a href="<%= fb_url %>" target="_blank">Facebook</a></li>
		<% } %>
	</ul>
</div>
